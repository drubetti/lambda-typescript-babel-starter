{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "baseUrl": "./src",
    "isolatedModules": true,
    "outDir": "./dist",
    "paths": {
      "@constants/*": ["constants/*"],
      "@functions/*": ["functions/*"],
      "@models/*": ["models/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
